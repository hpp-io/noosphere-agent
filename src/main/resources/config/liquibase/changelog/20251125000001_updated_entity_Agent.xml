    <changeSet id="20251125000001-1" author="jjang">
      <dropColumn tableName="agent" columnName="api_url"/>
      <dropColumn tableName="agent" columnName="api_key"/>
    </changeSet>
    <changeSet id="20251125000001-2" author="jjang">
      <addColumn tableName="agent">
        <column name="wallet_address" type="varchar(255)">
          <constraints nullable="true" unique="true" uniqueConstraintName="ux_agent__wallet_address" />
        </column>
        <column name="status_code" type="varchar(20)">
          <constraints nullable="true" />
        </column>
      </addColumn>
    </changeSet>
</databaseChangeLog>
